<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:gravity="start"
    android:paddingStart="80dp">
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start">
        <RadioButton
            android:id="@+id/article_text_size_small_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/article_text_size_small_text" />
        <RadioButton
            android:id="@+id/article_text_size_regular_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/article_text_size_regular_text"/>
        <RadioButton
            android:id="@+id/article_text_size_large_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/article_text_size_large_text"/>
        <RadioButton
            android:id="@+id/article_text_size_extra_large_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/article_text_size_extra_large_text" />
    </RadioGroup>
</LinearLayout>