<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <LinearLayout
        android:background="@android:color/black"
        android:gravity="center"
        android:padding="0.5dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/serial_num"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textStyle="normal"
            android:background="@android:color/white"/></LinearLayout>
    <LinearLayout
        android:background="@android:color/black"
        android:gravity="center"
        android:padding="0.5dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/entry_time"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textStyle="normal"
            android:background="@android:color/white"/></LinearLayout>
    <LinearLayout
        android:background="@android:color/black"
        android:gravity="center"
        android:padding="0.5dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/newspaper_name"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            android:background="@android:color/white"/></LinearLayout>
    <LinearLayout
        android:background="@android:color/black"
        android:gravity="center"
        android:padding="0.5dp"
        android:orientation="vertical"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/parent_feature_name"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textStyle="normal"
            android:background="@android:color/white"/></LinearLayout>
    <LinearLayout
        android:background="@android:color/black"
        android:gravity="center"
        android:padding="0.5dp"
        android:orientation="vertical"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/checked_feature_name"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            android:background="@android:color/white"/></LinearLayout>
    <LinearLayout
        android:background="@android:color/black"
        android:gravity="center"
        android:padding="0.5dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/check_result"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textStyle="normal"
            android:background="@android:color/white"/></LinearLayout>
</LinearLayout>